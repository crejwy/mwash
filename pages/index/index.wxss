.search__top{
  position: relative;
  margin-top: 5rpx;
  border: solid 1rpx  blue;
  padding-left: 5rpx 5rpx 5rpx 20rpx; 
  border-radius: 10rpx;
}
.btn_reset{
  background:none;
  position:absolute;
  border:none;
  right:0;
  top:0;
  bottom:0;
  width:80rpx;
}
.icon_clear{
  position:absolute;
  right:15rpx;
  top:10rpx;
  z-index:3;
}
.search__input{
  margin-left: 40rpx;
}
.search__icon{
  position: absolute;
  top:0;
  left: 5rpx;
}
